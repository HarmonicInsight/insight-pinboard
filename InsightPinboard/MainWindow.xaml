            <RowDefinition Height="44"/>
            <!-- Board Tabs -->
            <RowDefinition Height="36"/>
            <!-- Canvas -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <!-- ===== TOOLBAR ===== -->
