<Application x:Class="InsightPinboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Styles -->
        <SolidColorBrush x:Key="BgDark" Color="#0c0e14"/>
        <SolidColorBrush x:Key="BgPanel" Color="#161925"/>
        <SolidColorBrush x:Key="BgCard" Color="#1e2233"/>
        <SolidColorBrush x:Key="FgPrimary" Color="#ccd6f6"/>
        <SolidColorBrush x:Key="FgSecondary" Color="#8892b0"/>
        <SolidColorBrush x:Key="FgDim" Color="#4a5568"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#4ade80"/>
        <SolidColorBrush x:Key="AccentGold" Color="#B8942F"/>
        <SolidColorBrush x:Key="BorderSubtle" Color="#252c3a"/>
    </Application.Resources>
</Application>
